<?xml version="1.0" encoding="utf-8"?>

<templates id="field_templates">
    <t t-name="IKFieldGuillotineImage">
        <div class="oe_form_field form_field_ik_guillotine" t-att-style="widget.node.attrs.style">
            <t t-if="!widget.get('effective_readonly')">
                <img t-att-id="widget.id" t-att-src="url"/>
                <div class='guillotine_controls'>
                  <button class='ikg_rotate_left'  type='button' title='Rotate left'> &lt; </button>
                  <button class='ikg_zoom_out'     type='button' title='Zoom out'> - </button>
                  <button class='ikg_fit'          type='button' title='Fit image'> [ ]  </button>
                  <button class='ikg_zoom_in'      type='button' title='Zoom in'> + </button>
                  <button class='ikg_rotate_right' type='button' title='Rotate right'> &gt; </button>
                </div>
                
            </t>
            <t t-if="widget.get('effective_readonly')">
                <img t-att-id="widget.id" t-att-src="url"/>
            </t>
        </div>
    </t>
</templates>
